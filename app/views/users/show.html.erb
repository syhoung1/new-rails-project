<h1><%= @user.email %></h1>
<% if !current_user.admin? %>
  <% if current_user.standard? %>
    <h3><%= link_to "Upgrade to premium", charges_new_path %></h3>
  <% elsif current_user.premium? %>
    <h3><%= link_to "Switch me back to a normal subscription", user_path, method: :put, data: { confirm: 'Are you sure you would like to switch back to a normal subscription?' } %></h3>
  <% end %>
<% end %>